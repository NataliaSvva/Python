def calk(a, s):
    while s == 0:
        s = int(input("Знаменатель ее может быть равен 0, введите новое значение"))
    return a / s
a = int(input("Введите числитель: "))
s = int(input("Введите знаменатель: "))
print('%s%.2f' %("Результат деления составляет: ",(calk(a,s))))
a = int(input("Введите числитель: "))
s = int(input("Введите знаменатель: "))
print('%s%.2f' %("Результат деления составляет: ",(calk(a,s))))
